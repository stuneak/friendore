{
  "name": "friendore",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "--dev--": "--dev--",
    "dev": "node -r dotenv/config app.js dotenv_config_path=./.env.dev",
    "dev:front": "cd client && npm run dev",
    "dev:cron:find-connection": "node -r dotenv/config ./cron/find-connection.js dotenv_config_path=./.env.dev",
    "dev:cron:expiring-connection-email": "node -r dotenv/config ./cron/expiring-connection-email.js dotenv_config_path=./.env.dev",
    "dev:cron:expiring-friends-email": "node -r dotenv/config ./cron/expiring-friends-email.js dotenv_config_path=./.env.dev",
    "--prod--": "--prod--",
    "prod": "node -r dotenv/config app.js dotenv_config_path=./.env.prod",
    "prod:cron:find-connection": "node -r dotenv/config ./cron/find-connection.js dotenv_config_path=./.env.prod",
    "prod:cron:expiring-connection-email": "node -r dotenv/config ./cron/expiring-connection-email.js dotenv_config_path=./.env.prod",
    "prod:cron:expiring-friends-email": "node -r dotenv/config ./cron/expiring-friends-email.js dotenv_config_path=./.env.prod",
    "prod:front": "cd client && rm -rf ./dist && npm run build",
    "prod:start": "pm2 start ecosystem.config.js",
    "zip": "npm run prod:front && zip -r friendore.zip . -x '.git/*' -x 'cert/*' -x '**/node_modules/*' -x 'node_modules/*'"
  },
  "author": "stuneak",
  "license": "ISC",
  "dependencies": {
    "@getbrevo/brevo": "^2.2.0",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "http": "^0.0.1-security",
    "joi": "^17.13.3",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.14",
    "nodemailer-brevo-transport": "^2.1.0",
    "openai": "^4.56.0",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0",
    "regenerator-runtime": "^0.14.1",
    "socket.io": "^4.7.5",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
